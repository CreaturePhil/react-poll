header.mdl-layout__header.mdl-layout__header
  .mdl-layout__header-row
    // Title
    a.mdl-layout-title(href="/") Redux Poll
    // Add spacer, to align navigation to the right
    .mdl-layout-spacer
    // Navigation
    nav.mdl-navigation
      if !user
        a.mdl-navigation__link(href="/login") Log In
        a.mdl-navigation__link(href="/signup") Sign Up
      else
        a.mdl-navigation__link(href='/logout') Sign Out
